{
  "manifest_version": 3,
  "name": "Etherscan Address Finder",
  "version": "1.0",
  "description": "Right-click to check Ethereum address on Etherscan.",
  "permissions": ["contextMenus", "activeTab"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "48": "icon.png"
  }
}
